# 后端开发环境Dockerfile
FROM python:3.9-slim

# 设置工作目录
WORKDIR /app

# 安装系统依赖
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    build-essential \
    python3-dev \
    && rm -rf /var/lib/apt/lists/*

# 复制requirements文件
COPY requirements.txt .

# 安装Python依赖
RUN pip install --no-cache-dir -r requirements.txt

# 复制源代码
COPY . .

# 创建数据和日志目录
RUN mkdir -p data logs

# 暴露端口
EXPOSE 5000

# 设置环境变量
ENV FLASK_ENV=development
ENV FLASK_DEBUG=1

# 启动应用
CMD ["python", "app.py"]