  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "images",
          "accept": ["image/*"]
        }
      ]
    }
  },
  
  "protocol_handlers": [
    {
      "protocol": "web+divine",
      "url": "/?handler=%s"
    }
  ],
  
  "file_handlers": [
    {
      "action": "/open-bazi",
      "accept": {
        "application/json": [".bazi", ".json"]
      }
    }
  ],
  
  "prefer_related_applications": false,
  "related_applications": [
    {
      "platform": "play",
      "url": "https://play.google.com/store/apps/details?id=com.divinefriend.app",
      "id": "com.divinefriend.app"
    },
    {
      "platform": "itunes",
      "url": "https://apps.apple.com/app/divine-friend/id123456789"
    }
  ],
  
  "iarc_rating_id": "e84b072d-71b3-4d3e-86ae-31a8ce4e53b7",
  
  "edge_side_panel": {
    "preferred_width": 400
  },
  
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  
  "handle_links": "preferred",
  
  "scope_extensions": [
    {
      "origin": "https://divine-friend.com"
    }
  ],
  
  "display_override": [
    "window-controls-overlay",
    "minimal-ui",
    "standalone",
    "browser"
  ],
  
  "permissions": [
    "notifications",
    "background-sync",
    "vibrate"
  ],
  
  "notification_options": {
    "badge": "/icons/notification-badge-72x72.png",
    "tag": "divine-friend",
    "silent": false,
    "vibrate": [200, 100, 200],
    "renotify": false,
    "requireInteraction": false,
    "image": "/icons/notification-image-512x256.png",
    "actions": [
      {
        "action": "view",
        "title": "查看详情",
        "icon": "/icons/action-view.png"
      },
      {
        "action": "dismiss",
        "title": "稍后提醒",
        "icon": "/icons/action-dismiss.png"
      }
    ]
  },
  
  "id": "divine-friend-pwa-v1",
  
  "captures": [
    {
      "media": "image/*",
      "icon": {
        "src": "/icons/capture-image.png",
        "sizes": "48x48"
      },
      "label": "导入八字图片"
    }
  ]
} 
 
 